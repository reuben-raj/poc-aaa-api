{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "paths": {
            "opt/nodejs/util/logger": ["src/common/util/logger"],
            "opt/nodejs/util/constant": ["src/common/util/constant"],
            "opt/nodejs/aws/aws": ["src/common/aws/aws"]
        }
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "cdk.out", "coverage", "dist"]
}
